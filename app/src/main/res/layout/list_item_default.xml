<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mListItemContainer"
    style="@style/Himegami.Container.ListItem">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mListItemIcon"
        style="@style/Himegami.Item.Icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mListItemTitle"
        style="@style/Himegami.Item.Title"
        android:layout_toRightOf="@id/mListItemIcon"
        android:layout_toEndOf="@id/mListItemIcon"
        android:text="@string/list_item_title"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mListItemSubtitle"
        style="@style/Himegami.Item.Subtitle"
        android:layout_alignLeft="@id/mListItemTitle"
        android:layout_alignStart="@id/mListItemTitle"
        android:layout_below="@id/mListItemTitle"
        android:text="@string/list_item_subtitle"/>


</RelativeLayout>
